<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="create_hr_task_view_form" model="ir.ui.view">
        <field name="name">create.hr.task.view.form</field>
        <field name="model">create.hr.task</field>
        <field name="arch" type="xml">
            <form>
                <p colspan="2" class="alert alert-success" role="alert">
                    <b>
                        Create a new HR Task for the current user.
                    </b>
                </p>
                <sheet>
                    <group>
                        <group><field name="date_start" /></group>
                        <group><field name="date_end" /></group>
                    </group>
                </sheet>
                <footer>
                    <button
                        name="action_confirm"
                        string="Confirm"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
